<div class="container" style="padding:0 10%">
  <div class="card card-block">
    <h4 class="card-title"><%= @post.title %></h4>
    <h6 class="card-subtitle text-muted"><%= @post.category %> â€¢ Posted: <%= time_ago_in_words(@post.created_at) %> ago </h6>
    <p class="card-text"><%= @post.description %></p>
    <%= link_to 'Back', posts_path, class: "btn btn-warning" %>
    <% if @post.user_id == current_user.id %> |
    <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-info" %> |
    <%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %> 
    <% end %>
  </div>
</div>